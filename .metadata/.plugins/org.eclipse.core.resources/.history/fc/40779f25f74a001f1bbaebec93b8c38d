<title>KickHour Play</title>
<style>
    html,
    body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        position: relative;
    }
    .container {
        background-image: url('${pageContext.request.contextPath}/static/background.jpg');
        background-size: cover; 
        background-repeat: no-repeat;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .keeper {
        width: 200px;
        height: auto;
        position: absolute;
        bottom: 35%;
        left: calc(50% - 100px);
    }
    .soccerball {
        width: 60px; 
        height: auto;
        position: absolute;
        bottom: 10%;
        left: calc(50% - 30px); 
        cursor: pointer;
    }
    .score-box {
        position: absolute;
        bottom: 80px;
        left: 80px;
        background-color: rgba(0, 0, 0, 0.5);
        color: #FFFFFF;
        padding: 10px;
        border-radius: 5px;
        font-size: 30px;
    }
    .message-box {
        position: absolute;
        top: 40px;
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: #FFFFFF;
        padding: 10px;
        border-radius: 5px;
        font-size: 20px;
    }
    button {
    	background-color: #3460FE;
    	border-radius: 10px;
    	width: 200px;
    	height: 50px;
    	font-size: 20px;
    	color: #FFFFFF;
    	border: none;
    	margin-top: 1%;
    	position: absolute;
        bottom: 80px;
        right: 80px;
    }
</style>
<script>
    let score = 0;
    let attempts = 0;
    const maxAttempts = 5;
    const directions = ["center", "left", "right"];
    let selectedDirection = "center";

    function updateScore() {
        document.getElementById("score").innerText = "SCORE: " + score;
    }

    function showMessage(message) {
        document.getElementById("message").innerText = message;
    }

    function getRandomDirection() {
        return directions[Math.floor(Math.random() * directions.length)];
    }

    function moveElements() {
        const ball = document.querySelector(".soccerball");
        const keeper = document.querySelector(".keeper");

        let ballPosition;
        if (selectedDirection === "center") {
            ballPosition = "calc(50% - 30px)";
        } else if (selectedDirection === "left") {
            ballPosition = "calc(20% - 30px)";
        } else {
            ballPosition = "calc(80% - 30px)";
        }
        ball.style.left = ballPosition;

        const keeperDirection = getRandomDirection();
        let keeperPosition;
        if (keeperDirection === "center") {
            keeperPosition = "calc(50% - 100px)";
        } else if (keeperDirection === "left") {
            keeperPosition = "calc(30% - 100px)";
        } else {
            keeperPosition = "calc(70% - 100px)";
        }
        keeper.style.left = keeperPosition;

        if (selectedDirection !== keeperDirection) {
            score += 1;
        }
        updateScore();
        attempts += 1;

        if (attempts >= maxAttempts) {
            if (score >= 3) {
                showMessage("You win!");
            } else {
                showMessage("You lose!");
            }
            document.removeEventListener("keydown", handleKeydown);
        }
    }

    function handleKeydown(event) {
        if (event.key === "ArrowUp") {
            selectedDirection = "center";
        } else if (event.key === "ArrowLeft") {
            selectedDirection = "left";
        } else if (event.key === "ArrowRight") {
            selectedDirection = "right";
        } else if (event.key === " ") {
            moveElements();
        }
    }

    window.onload = function() {
        document.addEventListener("keydown", handleKeydown);
    }
</script>
</head>
<body>
    <div class="container">
        <div class="keeperbox">
            <img src="${pageContext.request.contextPath}/static/goalkeeper.png" class="keeper">
        </div>
